<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.upmf_grenoble.biofeedback.BiofeedbackActivity"
    android:background="@drawable/background_selector"
    android:orientation="horizontal"
    android:weightSum="2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/biofeedback_logOn"
            android:id="@+id/button_logOn"
            android:textColor="#FFFFFF"
            android:background="#84e7ae"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/button_text_size"
            android:layout_marginTop="40dp"
            android:layout_weight="0.50" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/biofeedback_logOff"
            android:id="@+id/button_logOff"
            android:textColor="#FFFFFF"
            android:background="#84e7ae"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/button_text_size"
            android:layout_marginTop="40dp"
            android:layout_weight="0.50" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/biofeedback_bioFeedback"
            android:id="@+id/button_bioFeedback"
            android:textColor="#FFFFFF"
            android:background="#84e7ae"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/button_text_size"
            android:layout_marginTop="40dp"
            android:layout_weight="0.50" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/biofeedback_fakeFeedback"
            android:id="@+id/button_fakeFeedback"
            android:textColor="#FFFFFF"
            android:background="#84e7ae"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/button_text_size"
            android:layout_marginTop="40dp"
            android:layout_weight="0.50" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/biofeedback_random"
            android:id="@+id/button_random"
            android:textColor="#FFFFFF"
            android:background="#84e7ae"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/button_text_size"
            android:layout_marginTop="40dp"
            android:layout_weight="0.50" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/text_zephyr"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/text_fake"/>
        <!--

        <ImageView
            android:id="@+id/rectimage"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:src="@drawable/rectangle"
            android:layout_gravity="center_horizontal">
        </ImageView>

        <ImageView
            android:id="@+id/rectimage2"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:src="@drawable/rectangle2"
            android:background="#FFFFFF"
