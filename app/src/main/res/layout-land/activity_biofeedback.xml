<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.upmf_grenoble.biofeedback.BiofeedbackActivity"
    android:background="@drawable/background_selector"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/biofeedback_logOn"
            android:id="@+id/button_logOn"
            android:textColor="#FFFFFF"
            android:background="#84e7ae"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/button_text_size"
            android:layout_marginTop="40dp"
            android:layout_weight="0.50" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/biofeedback_logOff"
            android:id="@+id/button_logOff"
            android:textColor="#FFFFFF"
            android:background="#84e7ae"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/button_text_size"
            android:layout_marginTop="40dp"
            android:layout_weight="0.50" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/biofeedback_event"
            android:id="@+id/button_event"
            android:textColor="#FFFFFF"
            android:background="#84e7ae"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/button_text_size"
            android:layout_marginTop="40dp"
            android:layout_weight="0.50" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/biofeedback_bioFeedback"
            android:id="@+id/button_bioFeedback"
            android:textColor="#FFFFFF"
            android:background="#84e7ae"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/button_text_size"
            android:layout_marginTop="40dp"
            android:layout_weight="0.50" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/biofeedback_fakeFeedback"
            android:id="@+id/button_fakeFeedback"
            android:textColor="#FFFFFF"
            android:background="#84e7ae"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/button_text_size"
            android:layout_marginTop="40dp"
            android:layout_weight="0.50" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/biofeedback_random"
            android:id="@+id/button_random"
            android:textColor="#FFFFFF"
            android:background="#84e7ae"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/button_text_size"
            android:layout_marginTop="40dp"
            android:layout_weight="0.50" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="35sp"
            android:id="@+id/text_progression"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            />

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="gone"
            android:id="@+id/progress_bar"/>

        <ImageView
            android:id="@+id/rect_empty"
            android:layout_height="0dp"
            android:layout_width="200dp"
            android:layout_weight="50"
            android:src="@drawable/rectangle">
        </ImageView>

        <ImageView
            android:id="@+id/rect_full"
            android:layout_height="0dp"
            android:layout_width="200dp"
            android:layout_weight="0"
            android:background="#000000"
            android:src="@drawable/rectangle">
        </ImageView>

        <ImageView
            android:id="@+id/rect_white"
            android:layout_height="0dp"
            android:layout_width="200dp"
            android:layout_weight="50"
            android:background="#ffffff"
            android:src="@drawable/rectangle2">
        </ImageView>
    </LinearLayout>



</LinearLayout>
