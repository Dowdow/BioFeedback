<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.upmf_grenoble.biofeedback.BiofeedbackActivity"
    android:background="@drawable/background_selector">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/text_instruction"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#84e7ae"
        android:text="@string/biofeedback_instructions"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/phase1"
        android:layout_below="@+id/text_instruction"
        android:layout_marginTop="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#ffffff"
        android:text="@string/biofeedback_phase1"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/phase2"
        android:layout_below="@+id/phase1"
        android:layout_marginTop="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#ffffff"
        android:text="@string/biofeedback_phase2"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/phase3"
        android:layout_below="@+id/phase2"
        android:layout_marginTop="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#ffffff"
        android:text="@string/biofeedback_phase3"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/phase4"
        android:layout_below="@+id/phase3"
        android:layout_marginTop="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#ffffff"
        android:text="@string/biofeedback_phase4"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/rectimage"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:src="@drawable/rectangle"
        android:layout_marginRight="92dp"
        android:layout_marginEnd="92dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView">
    </ImageView>

    <ImageView
        android:id="@+id/rectimage2"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:src="@drawable/rectangle2"
        android:layout_alignLeft="@+id/rectimage"
        android:layout_alignStart="@+id/rectimage"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/phase1"
        android:background="#FFFFFF">
    </ImageView>

</RelativeLayout>
