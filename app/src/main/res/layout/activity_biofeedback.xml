<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.upmf_grenoble.biofeedback.BiofeedbackActivity"
    android:background="@drawable/background_selector">

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/button_logOn"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/button_logOff"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/button_event"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/button_bioFeedback"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/button_fakeFeedback"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/button_random"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:textSize="35sp"
        android:id="@+id/text_progression"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/progress_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/rect_empty"
            android:layout_height="0dp"
            android:layout_width="200dp"
            android:layout_weight="50"
            android:src="@drawable/rectangle">
        </ImageView>

        <ImageView
            android:id="@+id/rect_full"
            android:layout_height="0dp"
            android:layout_width="200dp"
            android:layout_weight="0"
            android:background="#000000"
            android:src="@drawable/rectangle">
        </ImageView>

        <ImageView
            android:id="@+id/rect_white"
            android:layout_height="0dp"
            android:layout_width="200dp"
            android:layout_weight="50"
            android:background="#ffffff"
            android:src="@drawable/rectangle2">
        </ImageView>
    </LinearLayout>

</LinearLayout>
