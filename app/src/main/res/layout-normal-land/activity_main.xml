<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/background_selector"
    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/main_boutton1"
        android:id="@+id/button"
        android:onClick="openBiofeedbackActivity"
        android:textColor="#FFFFFF"
        android:background="#84e7ae"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:textSize="@dimen/button_land_text_size"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/main_boutton2"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="openBeltActivity"
        android:textColor="#FFFFFF"
        android:background="#84e7ae"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="@dimen/button_land_text_size"
        />



</RelativeLayout>
